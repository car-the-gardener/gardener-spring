<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gardener.mappers.MemberMapper">

	<!-- 지윤, 겨운 -->
	<select id="selectById" resultType="Member" parameterType="string">
    <![CDATA[
    SELECT * FROM member WHERE loginid= #{loginid}
    ]]>
	</select>

	
	<!-- 겨운 -->
	<select id="findMember" parameterType="map" resultType="Member">
		<![CDATA[
		SELECT loginid, pwd, email, nickname, intro, profile
		FROM member
		WHERE LOGINID = #{loginid}
		]]>
	</select>


	<update id="updateMember" parameterType="Member">
		<![CDATA[
		UPDATE member
		SET pwd = #{pwd},
		email = #{email},
		name = #{nickname},
		intro = #{intro},
		profile = #{profile}
		WHERE LOGINID = #{loginid}
		]]>
	</update>


	<delete id="deleteMember" parameterType="String">
		DELETE FROM member WHERE LOGINID = #{loginid}
	</delete>

</mapper>