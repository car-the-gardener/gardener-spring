<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.gardener.mappers.MemberMapper">

	<!-- 지윤, 겨운 -->
	<select id="selectByLoginid" resultType="Member" parameterType="string">
    <![CDATA[
    SELECT * FROM member WHERE loginid= #{loginid}
		]]>
	</select>

<select id="selectByNickname" resultType="Member" >
SELECT * FROM member WHERE nickname= #{nickname}
</select>

<select id="selectByEmail" resultType="Member" >
SELECT * FROM member WHERE email= #{email}
</select>

<insert id="insert" parameterType="Member">
 INSERT INTO member (loginid,pwd,email,nickname,intro,profile,createdate) 
 VALUES (#{loginid}, #{pwd}, #{email}, #{nickname},null,null,null)
</insert>


	<update id="updateMember" parameterType="Member">
		<![CDATA[
		UPDATE member
		SET pwd = #{pwd},
		email = #{email},
		name = #{name},
		intro = #{intro},
		profile = #{profile}
		WHERE LOGINID = #{loginid}
		]]>
	</update>


	<delete id="deleteMember" parameterType="String">
		DELETE FROM member WHERE LOGINID = #{loginid}
	</delete>

</mapper>