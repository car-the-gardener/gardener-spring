<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gardener.mappers.PostMapper">

    <insert id="insert">
        <selectKey keyProperty="id" order="AFTER" resultType="long">
            select seq_post.currval from dual
        </selectKey>
        insert into post (id,member_loginid, main_title, sub_title, content, main_title_img, category, public_yn,
        favorite) values(seq_post.nextval, 'suwan',#{mainTitle}, #{subTitle},#{content}, #{mainTitleImg},
        #{category}, #{publicYn}, #{favorite})
    </insert>

    <resultMap id="PostResultMap" type="Post">
        <id property="id" column="id"/>
        <result property="memberLoginid" column="member_loginid"/>
        <result property="mainTitle" column="main_title"/>
        <result property="subTitle" column="sub_title"/>
        <result property="content" column="content"/>
        <result property="mainTitleImg" column="main_title_img"/>
        <result property="category" column="category"/>
        <result property="publicYn" column="public_yn"/>
        <result property="favorite" column="favorite"/>
        <result property="createDate" column="create_date"/>
        <association property="member" javaType="Member" autoMapping="true"/>
    </resultMap>

    <select id="findById" resultMap="PostResultMap">
        select * from post where id =#{id}
    </select>

    <select id="findAll" resultType="post">
        select * from post
    </select>

</mapper>
